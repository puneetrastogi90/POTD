<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dateEditText" parent="android:Widget.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/edittext_border</item>
    </style>

    <style name="list_item_card_view">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>


    <style name="list_item_title_textview">
        <item name="android:textColor">@color/list_item_title</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_slab_regular</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="list_item_desc_textview">
        <item name="android:textColor">@color/list_item_desc</item>
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="list_item_date_textview">
        <item name="android:textColor">@color/list_item_date</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="fontFamily">@font/roboto_slab_regular</item>
    </style>
</resources>